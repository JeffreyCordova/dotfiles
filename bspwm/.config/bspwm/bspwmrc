#! /bin/sh

sxhkd &
xsetroot -cursor_name left_ptr
picom -b
feh --bg-fill \
    $HOME/.local/wallpaper/witcher1.jpg \
    $HOME/.local/wallpaper/witcher2.jpg \
    $HOME/.local/wallpaper/witcher3.jpg

bspc monitor DP-2 -d I II III
bspc monitor DP-0 -d IV V VI
bspc monitor DP-6 -d VII VIII IX X

bspc config border_width         4
bspc config window_gap           6

bspc config normal_border_color   '#000000'
bspc config active_border_color   '#464c4c'
bspc config focused_border_color  '#aabbbc'
bspc config presel_feedback_color '#aabbbc'

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a Chromium desktop='^2'
bspc rule -a Pavucontrol state=floating
